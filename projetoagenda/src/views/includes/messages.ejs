<!-- Mensagem de erro -->
<% if (errors.length > 0) { %>
<div class="row my-3">
   <div class="col">
      <div class="alert alert-danger">
       <% errors.forEach(erro => { %>
         <%= erro %><br>
         <% }) %>
      </div>
   </div>
</div>
<% } %>

<!-- Mensagem de sucesso -->
<% if (success.length > 0) { %>
   <div class="row my-3">
      <div class="col">
         <div class="alert alert-success">
          <% success.forEach(success => { %>
            <%= success %><br>
            <% }) %>
         </div>
      </div>
   </div>
   <% } %>